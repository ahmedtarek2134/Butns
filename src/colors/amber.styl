.butn.amber
	background-color amber
	border-color amber-600
	&:hover
		background-color amber-600

.butn.amber.dark
	background-color amber-800
	border-color amber-900
	&:hover
		background-color amber-900

.butn.amber.light
	background-color amber-200
	border-color amber-300
	&:hover
		background-color amber-300

.butn.amber.outline
	background-color transparent
	border-color amber
	color amber
	&:hover
		color white
		background-color amber

.butn.amber.outline.dark
	background-color transparent
	border-color amber-800
	color amber-800
	&:hover
		background-color amber-800
		color white

.butn.amber.outline.light
	background-color transparent
	border-color amber-200
	color amber-200
	&:hover
		background-color amber-200
		color white

.butn.amber.gradient
	background linear-gradient(amber, amber-800)
	color white
	&:hover
		background linear-gradient(amber-600,amber-900)
